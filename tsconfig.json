{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./lib/esm",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "composite": true,
    "rootDir": "src/"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.json",
  ]
}
